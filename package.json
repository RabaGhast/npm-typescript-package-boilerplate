{
  "name": "npm-typescript-package-boilerplate",
  "version": "2.1.0",
  "description": "A boilerplate repo for publishing typescript packages to npm",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build": "tsc",
    "watch": "tsc -w",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "start": "npm link && nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/93v/npm-typescript-package-boilerplate.git"
  },
  "keywords": [
    "Hello",
    "Greeter"
  ],
  "author": {
    "name": "93v",
    "email": "93v@protonmail.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/93v/npm-typescript-package-boilerplate/issues"
  },
  "homepage": "https://github.com/93v/npm-typescript-package-boilerplate#readme",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "eslint": "^5.16.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "files": [
    "dist/**/*"
  ]
}
